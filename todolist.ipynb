print("------------------------------\n*** To-Do List Application ***\n-------by Srivarshini---------\n")

tasks = []

def add_tasks():
    while True:
        newtask = input("\nEnter your task: ").strip()
        if newtask:
            tasks.append(newtask)
            print(f'Task "{newtask}" has been added to your to-do list.')
        else:
            print("Empty task not added.")

        # ask whether to continue and validate input
        while True:
            add_more = input("\nDo you want to add another task? (yes(Y)/no(N)): ").strip().lower()
            if add_more in ("yes", "y"):
                break  # go back to outer loop to add again
            elif add_more in ("no", "n"):
                return
            else:
                print("Invalid input. Please enter 'yes', 'y' or 'no', 'n'.")

def view_tasks():
    print("Here is your to-do list:")
    for idx, task in enumerate(tasks, start=1):
            print(f"{idx}. {task}")
    if (not tasks):
        print("Your to-do list is empty.")  

def delete_tasks():
    if not tasks:
        print("Your to-do list is empty.")
        return

    view_tasks()
    while True:
        choice = input("Enter the number of the task you want to delete (or 'no' to stop): ").strip()
        if choice in ("no", "n", "No", "N"):
            break
        if not choice.isdigit():
            print("Please enter a valid task number.")
            continue
        idx = int(choice) - 1
        if 0 <= idx < len(tasks):
            removed = tasks.pop(idx)
            print(f'Task "{removed}" has been deleted from your to-do list.')
            if not tasks:
                print("Your to-do list is now empty.")
                break
            view_tasks()
        else:
            print("Task number out of range. Try again.")

while True:
    print("\nWhat do you want to do today?")
    print("1. Add Tasks\n2. View Tasks\n3. Delete Tasks\n4. Exit")
    choice = input("Enter your choice (1-4): ").strip()

    match choice:
        case "1":
            print("\n--- Add Tasks ---")
            add_tasks()
            print("\n------------------------------")
        case "2":
            print("\n--- View Tasks ---")
            view_tasks()
            print("\n------------------------------")
        case "3":
            print("\n--- Delete Tasks ---")
            delete_tasks()
            print("\n------------------------------")
        case "4":
            print("\nExiting the application. Have a great day!")
            print("------------------------------------------")
            exit()
        case _:
            print("Invalid choice. Please enter a number between 1 and 4.")
