print("*** Welcome to the To-Do List Application ***")
tasks = []

userinput = input("Do you want to add a task to the to-do list? (yes/no): ")
if (userinput == "yes" or userinput == "Yes"):
    newtask = input("Enter your task: ")
    tasks.append(newtask)
else:
    print("You chose not to add a task.")

addtasks = input("Do you want to add another task? (yes/no): ")
while (addtasks == "yes" or addtasks == "Yes"):
    newtask = input("Enter the task you want to add: ")
    tasks.append(newtask)
    addtasks = input("Do you want to add another task? (yes/no): ")

viewtasks = input("Do you want to view your to-do list? (yes/no): ")

if (viewtasks == "yes" or viewtasks == "Yes"):
    print("Here is your to-do list:")
    print(tasks)
    if tasks == []:
        print("Your to-do list is empty.")      
else:
    print("You chose not to view your to-do list.")
