print("*** To-Do List Application ***")
print("-------by Srivarshini---------\n")

tasks = []

def add_tasks():
    newtask = input("\nEnter your task: ")
    tasks.append(newtask)
    print(f'Task "{newtask}" has been added to your to-do list.')

    addtasks = input("\nDo you want to add another task? (yes/no): ")
    while (addtasks == "yes" or addtasks == "Yes"):
        newtask = input("Enter the task you want to add: ")
        tasks.append(newtask)
        print(f'Task "{newtask}" has been added to your to-do list.')
        addtasks = input("\nDo you want to add another task? (yes/no): ")

def view_tasks():
    print("Here is your to-do list:")
    for idx, task in enumerate(tasks, start=1):
            print(f"{idx}. {task}")
    if (not tasks):
        print("Your to-do list is empty.")  

def delete_tasks():
    print("Here is your to-do list:", tasks)
    tasktodelete = input("Enter the task you want to delete: ")
    while tasktodelete in tasks:
        tasks.remove(tasktodelete)
        print(f'Task "{tasktodelete}" has been deleted from your to-do list.')
        tasktodelete = input("Enter another task you want to delete (or type 'no' to stop): ")
        if tasktodelete.lower() == 'no':
            break

while True:
    print("\nWhat do you want to do today?")
    print("1. Add Tasks\n2. View Tasks\n3. Delete Tasks\n4. Exit")
    choice = input("Enter your choice (1-4): ")

    match choice:
        case "1":
            print("\n--- Add Tasks ---")
            add_tasks()
        case "2":
            print("\n--- View Tasks ---")
            view_tasks()
        case "3":
            print("\n--- Delete Tasks ---")
            delete_tasks()
        case "4":
            print("\nExiting the application. Have a great day!")
            print("------------------------------------------")
            exit()
        case _:
            print("Invalid choice. Please enter a number between 1 and 4.")
